<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="5dp"
	android:gravity="center_vertical">
	
	<ImageView
		android:id="@+id/componentSelectKeywordsItemNotCheck"
		style="@style/IconImage"
		app:srcCompat="@drawable/record_icon" />
	
	<ImageView
		android:id="@+id/componentSelectKeywordsItemChecked"
		style="@style/IconImage"
		app:srcCompat="@drawable/tick_icon" />

	<TextView
		android:id="@+id/componentSelectKeywordsItemName"
		style="@style/Label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

</LinearLayout>