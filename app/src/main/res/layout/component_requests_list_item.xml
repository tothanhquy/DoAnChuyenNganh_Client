<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<LinearLayout
		style="@style/Container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:orientation="vertical">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">
			
			<TextView
				android:id="@+id/componentRequestsListItemDate"
				style="@style/Label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="date time" />
			
			<TextView
				android:id="@+id/componentRequestsListItemStatus"
				style="@style/Label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="status" />
			
			<ImageView
				android:id="@+id/componentRequestsListItemIsImportant"
				style="@style/IconImage"
				android:layout_gravity="center"
				app:srcCompat="@drawable/star_icon" />
			
			<ImageView
				android:id="@+id/componentRequestsListItemNotRead"
				style="@style/IconImage"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				app:srcCompat="@drawable/notification_letter_icon" />
		</LinearLayout>
		
		<TextView
			style="@style/Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Từ" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">
			
			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/componentRequestsListItemFromAvatar"
				style="@style/MediumSmallAvatar"
				tools:srcCompat="@tools:sample/avatars" />
			
			<TextView
				android:id="@+id/componentRequestsListItemFromName"
				style="@style/Title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="from name" />
		</LinearLayout>
		
		<TextView
			style="@style/Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Đến" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="horizontal">
			
			<com.google.android.material.imageview.ShapeableImageView
				android:id="@+id/componentRequestsListItemToAvatar"
				style="@style/MediumSmallAvatar"
				tools:srcCompat="@tools:sample/avatars" />
			
			<TextView
				android:id="@+id/componentRequestsListItemToName"
				style="@style/Title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="to name" />
		</LinearLayout>
	
	</LinearLayout>

</LinearLayout>