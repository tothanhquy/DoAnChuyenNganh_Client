<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">
	
	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/componentProjectMembersNowItemAvatar"
		style="@style/MediumSmallAvatar"
		tools:srcCompat="@tools:sample/avatars" />
	
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/componentProjectMembersNowItemName"
			style="@style/Title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="member name" />

		<TextView
			android:id="@+id/componentProjectMembersNowItemLeaderFlag"
			style="@style/Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:text="Leader"
			android:textColor="?attr/backgroundActionBtn"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/componentProjectMembersNowItemRole"
			style="@style/Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:text="role" />
	</LinearLayout>
	
	<ImageView
		android:id="@+id/componentProjectMembersNowItemBtnAction"
		style="@style/IconImage"
		app:srcCompat="@drawable/dots_icon" />
</LinearLayout>