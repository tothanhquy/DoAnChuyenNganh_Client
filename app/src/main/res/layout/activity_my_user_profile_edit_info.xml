<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/myUserProfileEditInfoActivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/light_blue_900"
	android:theme="@style/AppTheme"
	tools:context=".view.user_profile.MyUserProfileEditInfoActivity"
	tools:viewBindingIgnore="true">
	
	<ScrollView
		style="@style/MainScrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:contentDescription="main menu content"
		android:elevation="1dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<LinearLayout
			style="@style/MainScrollViewChildContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			tools:layout_editor_absoluteX="15dp"
			tools:layout_editor_absoluteY="15dp">
			
			<LinearLayout
				style="@style/Container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="400dp"
				android:orientation="vertical">
				
				<TextView
					style="@style/Label"
					android:text="Tên" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityName"
					style="@style/Input"
					android:ems="10"
					android:hint="tên"
					android:inputType="textPersonName" />
				
				<TextView
					style="@style/Label"
					android:text="Năm sinh" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityBirthYear"
					style="@style/Input"
					android:ems="10"
					android:hint="2000"
					android:inputType="numberDecimal" />
				
				<TextView
					style="@style/Label"
					android:text="Châm ngôn" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityMaxim"
					style="@style/Input"
					android:ems="10"
					android:gravity="start|top"
					android:hint="châm ngôn"
					android:inputType="textMultiLine"
					tools:text="châm ngôn 3" />
				
				<TextView
					style="@style/Label"
					android:text="Thôn tin liên lạc" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityContact"
					style="@style/Input"
					android:ems="10"
					android:gravity="start|top"
					android:hint="địa chỉ, sdt, email,..."
					android:inputType="textMultiLine" />
				
				<TextView
					style="@style/Label"
					android:text="Mục tiêu nghề nghiệp" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityCareerTarget"
					style="@style/Input"
					android:ems="10"
					android:gravity="start|top"
					android:hint="mục tiêu tương lai"
					android:inputType="textMultiLine" />
				
				<TextView
					style="@style/Label"
					android:text="Học vấn" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityEducation"
					style="@style/Input"
					android:ems="10"
					android:gravity="start|top"
					android:hint="sinh viên năm x, dh Y"
					android:inputType="textMultiLine" />
				
				<TextView
					style="@style/Label"
					android:text="Kinh nghiệm làm việc" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityWorkExperience"
					style="@style/Input"
					android:ems="10"
					android:gravity="start|top"
					android:hint="2 năm frontend công ty z"
					android:inputType="textMultiLine" />
				
				<TextView
					style="@style/Label"
					android:text="Mô tả" />
				
				<EditText
					android:id="@+id/myUserProfileEditInfoActivityDescription"
					style="@style/Input"
					android:ems="10"
					android:gravity="start|top"
					android:hint="mô tả"
					android:inputType="textMultiLine" />
			
			</LinearLayout>
		
		
		</LinearLayout>
	
	</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>