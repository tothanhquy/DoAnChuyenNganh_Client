<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">
	
	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/componentChanelChatMembersListItemAvatar"
		style="@style/MediumSmallAvatar"
		tools:srcCompat="@tools:sample/avatars" />
	
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/componentChanelChatMembersListItemName"
			style="@style/Title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="member name" />

	</LinearLayout>
	
	<ImageView
		android:id="@+id/componentChanelChatMembersListItemBtnAction"
		style="@style/IconImage"
		app:srcCompat="@drawable/dots_icon" />
</LinearLayout>