<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="15dp"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/componentProjectResourceItemImage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			tools:srcCompat="@tools:sample/avatars"
			tools:visibility="gone" />

		<VideoView
			android:id="@+id/componentProjectResourceItemVideo"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			tools:visibility="visible" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/componentProjectResourceItemAlt"
				style="@style/Label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="0dp"
				android:layout_weight="1"
				android:text="TextView" />

			<ImageView
				android:id="@+id/componentProjectResourceItemOptionButton"
				style="@style/IconImage"
				app:srcCompat="@drawable/dots_icon" />
		</LinearLayout>
	</LinearLayout>

</androidx.cardview.widget.CardView>