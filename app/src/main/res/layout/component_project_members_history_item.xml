<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:gravity="center">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/componentProjectMembersHistoryItemAvatar"
		style="@style/MediumSmallAvatar"
		tools:srcCompat="@tools:sample/avatars" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/componentProjectMembersHistoryItemTime"
			style="@style/Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingLeft="10dp"
			android:text="20:10:2028"
			android:textAlignment="textStart"
			android:textColor="@color/theme_color_2_dark" />

		<TextView
			android:id="@+id/componentProjectMembersHistoryItemName"
			style="@style/Title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:text="member name" />

		<TextView
			android:id="@+id/componentProjectMembersHistoryItemRole"
			style="@style/Label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:paddingLeft="10dp"
			android:text="role" />
	</LinearLayout>

</LinearLayout>