<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Label">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">?attr/fontLabel</item>
		<item name="android:textSize">16dp</item>
		<item name="android:color">?attr/colorLabel</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>
	<style name="Input">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:fontFamily">?attr/fontInput</item>
		<item name="android:textSize">16dp</item>
		<item name="android:color">?attr/colorInput</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:gravity">start</item>
		<item name="android:background">@drawable/input_bg</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
<!--		<item name="android:scrollbars">vertical</item>-->
<!--		<item name="android:smoothScrollbar">true</item>-->
		
	</style>
</resources>