<resources xmlns:tools="http://schemas.android.com/tools">
	 Base application theme.
	<style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
	</style>
	<style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@color/color_bar_screen</item>
		<item name="android:background">@color/background_bar_screen</item>
		<item name="android:fontFamily">@font/bangers_regular</item>
	</style>
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">@color/background_bar_screen</item>
		<item name="android:actionBarStyle">@style/ActionBarStyle</item>
		<!-- Customize your theme here. -->
		<item name="android:navigationBarColor">@color/background_bar_screen</item>
	</style>
	
	<style name="AppThemeFullscreen" parent="AppTheme">
		<!-- Customize your theme here. -->
		<!--		<item name="colorPrimary">@color/orange</item>-->
		<!--		<item name="colorPrimaryDark">@android:color/holo_orange_dark</item>-->
		<item name="windowNoTitle">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="windowActionBar">true</item>
		
<!--		fonts-->
<!--		<item name="color">@font/bangers_regular</item>-->
		<item name="fontArt">@font/lobster_regular</item>
		<item name="fontTitle">@font/roboto_slab</item>
		<item name="fontLabel">@font/roboto_slab</item>
		<item name="fontInput">@font/roboto_slab</item>
		<item name="fontButton">@font/roboto_slab</item>
		<item name="fontContent">@font/playfair_display</item>
		<item name="fontContentItalic">@font/playfair_display_italic</item>
<!--		colors-->
		<item name="backgroundScreen">@color/background_screen</item>
		<item name="backgroundScreenDark">@color/background_screen_dark</item>
		<item name="backgroundContainer">@color/background_container</item>
		<item name="colorBarTitle">@color/theme_color_2_contrast</item>
		<item name="backgroundBarTitle">@color/theme_color_2</item>
		
		<item name="colorTitle">@color/black</item>
		<item name="colorContent">@color/black</item>
		<item name="colorLabel">@color/black</item>
		<item name="colorInput">@color/black</item>
		
		<item name="backgroundActionBtn">@color/theme_color_2</item>
		<item name="background2ActionBtn">@color/theme_color_2_dark</item>
		<item name="colorActionBtn">@color/theme_color_2_contrast</item>
		<item name="color2ActionBtn">@color/theme_color_2_contrast_dark</item>
		<item name="backgroundWarningBtn">@color/theme_color_5</item>
		<item name="background2WarningBtn">@color/theme_color_5_dark</item>
		<item name="colorWarningBtn">@color/theme_color_5_contrast</item>
		<item name="backgroundCloseBtn">@color/theme_color_3</item>
		<item name="background2CloseBtn">@color/theme_color_3_dark</item>
		<item name="colorCloseBtn">@color/theme_color_3_contrast</item>
		
		<item name="borderColorUserAvatar">@color/logo_color_3</item>
		<item name="borderColorTeamAvatar">@color/logo_color_1</item>
		
<!--		<item name="backgroundContainerCV">@color/logo_color_1</item>-->
		<item name="messageChatTimeBg">@color/theme_color_2_contrast_dark</item>
		<item name="messageChatTimeColor">@color/theme_color_2_contrast</item>
		<item name="messageChatFriendBg">@color/background10</item>
		<item name="messageChatFriendColor">@color/black</item>
		<item name="messageChatFriendNameColor">@color/theme_color_1</item>
		<item name="messageChatMeBg">@color/theme_color_2</item>
		<item name="messageChatMeColor">@color/black</item>

		<item name="notificationReadBgColor">@color/theme_color_2_contrast_dark</item>
		<item name="notificationNotReadBgColor">@color/white</item>

		
	</style>
	
	
	<style name="AppThemeFullscreenNight" parent="AppThemeFullscreen">
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
	</style>
	
	<style name="AppThemeFullscreenDay" parent="AppThemeFullscreen">
		<!--		<item name="background">@drawable/background_original_night</item>-->
	</style>
	
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">true</item>
		<item name="windowNoTitle">false</item>
	</style>
	
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
	
</resources>