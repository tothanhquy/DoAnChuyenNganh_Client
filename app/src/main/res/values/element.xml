<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="UserAvatarProfile">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">200dp</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:padding">5dp</item>
		<item name="shapeAppearanceOverlay">@style/AvatarRoundedSquare</item>
	</style>
	<style name="TeamAvatarProfile">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">200dp</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:padding">5dp</item>
		<item name="shapeAppearanceOverlay">@style/AvatarRoundedSquare</item>
	</style>
	<style name="AvatarRoundedSquare">
		<item name="cornerSize">20%</item>
	</style>
	<style name="SkillImage">
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:scaleType">centerInside</item>
<!--		<item name="android:padding">5dp</item>-->
		<item name="android:layout_margin">5dp</item>
		<item name="shapeAppearanceOverlay">@style/SkillImageSquare</item>
	</style>
	<style name="SkillImageSquare">
		<item name="cornerSize">20%</item>
	</style>
	<style name="IconImage">
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:scaleType">centerInside</item>
	</style>
	<style name="TeamAvatarItem">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:adjustViewBounds">true</item>
<!--		<item name="android:padding">5dp</item>-->
		<item name="android:layout_margin">5dp</item>
		<item name="shapeAppearanceOverlay">@style/AvatarRoundedSquare</item>
	</style>
	<style name="UserAvatarItem">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:adjustViewBounds">true</item>
<!--		<item name="android:padding">5dp</item>-->
		<item name="android:layout_margin">5dp</item>
		<item name="shapeAppearanceOverlay">@style/AvatarRoundedSquare</item>
	</style>
	<style name="SmallAvatar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">50dp</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:layout_margin">5dp</item>
		<item name="shapeAppearanceOverlay">@style/AvatarRoundedSquare</item>
	</style>
	<style name="MediumSmallAvatar" parent="SmallAvatar">
		<item name="android:layout_width">70dp</item>
	</style>
	<style name="MediumAvatar" parent="SmallAvatar">
		<item name="android:layout_width">100dp</item>
	</style>
	<style name="TeamProfileMemberAvatar">
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:scaleType">centerInside</item>
		<item name="android:layout_margin">5dp</item>
		<item name="shapeAppearanceOverlay">@style/SkillImageSquare</item>
	</style>

</resources>